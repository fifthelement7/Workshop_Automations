# Development Environment Configuration for Mindscribe

ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/mindscribe_dev
DATABASE_TEST_URL=postgresql://postgres:password@localhost:5432/mindscribe_test

# Security (Development only - not for production)
SECRET_KEY=dev-secret-key-change-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# AI/ML Configuration (Use test keys for development)
OPENAI_API_KEY=sk-test-key-for-development
AI_MODEL_VERSION=gpt-3.5-turbo

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE_MB=50

# Email Configuration (Development - use MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false