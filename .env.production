# Production Environment Configuration for Mindscribe
# WARNING: This file contains sensitive configuration. Use AWS Secrets Manager in production.

ENVIRONMENT=production

# Database Configuration (Use AWS RDS)
DATABASE_URL=${DATABASE_URL}
DATABASE_TEST_URL=${DATABASE_TEST_URL}

# Security (Use AWS Secrets Manager)
SECRET_KEY=${SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# AWS Configuration
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-west-2
AWS_SECRETS_MANAGER_SECRET_NAME=mindscribe-prod-secrets

# Redis Configuration (Use AWS ElastiCache)
REDIS_URL=${REDIS_URL}

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# CORS Configuration (Restrict to production domains)
ALLOWED_ORIGINS=https://app.mindscribe.com,https://mindscribe.com

# AI/ML Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
AI_MODEL_VERSION=gpt-4

# File Storage (Use AWS S3)
UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE_MB=100

# Email Configuration (Use AWS SES)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true