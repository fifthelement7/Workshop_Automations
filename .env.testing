# Testing Environment Configuration for Mindscribe

ENVIRONMENT=testing

# Database Configuration (Test containers will override this)
DATABASE_URL=postgresql://postgres:password@localhost:5432/mindscribe_test
DATABASE_TEST_URL=postgresql://postgres:password@localhost:5432/mindscribe_test

# Security (Testing)
SECRET_KEY=test-secret-key-not-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# API Configuration
API_HOST=127.0.0.1
API_PORT=8001
API_PREFIX=/api/v1

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# AI/ML Configuration (Mock for testing)
OPENAI_API_KEY=test-key
AI_MODEL_VERSION=gpt-3.5-turbo

# File Storage
UPLOAD_PATH=./test_uploads
MAX_FILE_SIZE_MB=10

# Email Configuration (Mock)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=test@mindscribe.com
SMTP_PASSWORD=test

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false